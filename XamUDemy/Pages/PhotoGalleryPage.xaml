<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="XamUDemy.Pages.PhotoGalleryPage"
    BackgroundColor="Black" >

    <AbsoluteLayout>
        <Image
            AbsoluteLayout.LayoutBounds= "0, 0, 1, 1" AbsoluteLayout.LayoutFlags= "All"
            x:Name= "image" />

        <ActivityIndicator
            AbsoluteLayout.LayoutBounds= "0.5, 0.05, 100, 100" AbsoluteLayout.LayoutFlags= "PositionProportional"            Color= "Aqua"
            IsRunning= 
                "{Binding source={x:Reference image},
                Path= IsLoading}" />

        <Button
            AbsoluteLayout.LayoutBounds= "0.5, 0.05, 100, 100" AbsoluteLayout.LayoutFlags= "PositionProportional"
            Clicked="Previous_Clicked"
            Text="previous" />
        


    </AbsoluteLayout>
</ContentPage>
